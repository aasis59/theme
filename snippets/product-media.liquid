{% case media.media_type %}
  {% when 'image' %}
  <img
    src="{{ media | img_url: 'large' }}"
    alt="{{ media.preview_image.alt }}"
    class="h-50">
  {% when 'external_video' %}
  {{ media | external_video_tag: class: 'h-50' }}

  {% when 'video' %}
  {{ media | video_tag: controls: ture, class: ' h-50' }}{% else %}

{% endcase %}